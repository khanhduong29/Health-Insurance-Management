@model IEnumerable<Health_Insurance_Management.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Layout/_Layout.cshtml";
}

    <section class="content-header">
        <h1>
            Health-Insurance-Management
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Employee</a></li>
            <li class="active">View All</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <button class="btn btn-success" style="color: white;">
            @Html.ActionLink("Create New", "Create")
        </button>
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Employees</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Policy Name</th>
                                    <th>Employee Name</th>
                                    <th>Designation</th>
                                    <th>JoinDate</th>
                                    <th>Salary</th>
                                    <th>Address</th>
                                    <th>Phone</th>
                                    <th>Status</th>
                                    <th>Created At</th>
                                    <th>Updated At</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmployeeId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.GetPolicy.PolicyName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmployeeName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Designation)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.JoinDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Salary)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmployeeAddress)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmployeePhone)
                                        </td>
                                        <td>
                                            @if (item.Status == Health_Insurance_Management.Models.Enum.Status.Active)
                                            {
                                                <span class="label label-success">@Html.DisplayFor(modelItem => item.Status)</span>
                                            }
                                            else
                                            {
                                                <span class="label label-warning">@Html.DisplayFor(modelItem => item.Status)</span>
                                            }

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreatedDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UpdatedDate)
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">Action</button>
                                                <ul class="dropdown-menu" role="menu">
                                                    @if (item.Status == Health_Insurance_Management.Models.Enum.Status.Active)
                                                    {
                                                        <li><a href="@Url.Action("ChangeStatus", "Employees", new { id = item.EmployeeId })">DeActive</a></li>
                                                    }
                                                    else
                                                    {
                                                        <li><a href="@Url.Action("ChangeStatus", "Employees", new { id = item.EmployeeId })">Active</a></li>
                                                    }
                                                    <li class="divider"></li>
                                                    <li><a href="@Url.Action("Details", "Employees", new { id = item.EmployeeId })">View Detail</a></li>
                                                    <li><a href="@Url.Action("Edit", "Employees", new { id = item.EmployeeId })">Edit</a></li>
                                                    <li><a href="@Url.Action("Delete", "Employees", new { id = item.EmployeeId })">Delete</a></li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Rendering engine</th>
                                    <th>Browser</th>
                                    <th>Platform(s)</th>
                                    <th>Engine version</th>
                                    <th>CSS grade</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
