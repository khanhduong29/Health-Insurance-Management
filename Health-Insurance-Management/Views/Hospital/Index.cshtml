@model IEnumerable<Health_Insurance_Management.Models.HospitalInfo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Layout/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Health-Insurance-Management
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Hospital Information</a></li>
        <li class="active">View All</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <button class="btn btn-success" style="color: white;">
        @Html.ActionLink("Create New", "Create")
    </button>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Hospital</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th>Hospital URL</th>
                                <th>Status</th>
                                <th>Created At</th>
                                <th>Updated At</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HospitalId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HospitalName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HospitalAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HospitalPhone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HospitalURL)
                                    </td>
                                    <td>
                                        @if (item.Status == Health_Insurance_Management.Models.Enum.Status.Active)
                                        {
                                            <span class="label label-success">@Html.DisplayFor(modelItem => item.Status)</span>
                                        }
                                        else
                                        {
                                            <span class="label label-warning">@Html.DisplayFor(modelItem => item.Status)</span>
                                        }

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdatedDate)
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">Action</button>
                                            <ul class="dropdown-menu" role="menu">
                                                @if (item.Status == Health_Insurance_Management.Models.Enum.Status.Active)
                                                {
                                                    <li><a href="@Url.Action("ChangeStatus", "Hospital", new { id = item.HospitalId })">DeActive</a></li>
                                                }
                                                else
                                                {
                                                    <li><a href="@Url.Action("ChangeStatus", "Hospital", new { id = item.HospitalId })">Active</a></li>
                                                }
                                                <li class="divider"></li>
                                                <li><a href="@Url.Action("Details", "Hospital", new { id = item.HospitalId })">View Detail</a></li>
                                                <li><a href="@Url.Action("Edit", "Hospital", new { id = item.HospitalId })">Edit</a></li>
                                                <li><a href="@Url.Action("Delete", "Hospital", new { id = item.HospitalId })">Delete</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>